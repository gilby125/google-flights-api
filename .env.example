# Core service
PORT=8080
ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=json

# PostgreSQL (managed or self-hosted)
DB_HOST=my-postgres-hostname
DB_PORT=5432
DB_USER=flights
DB_PASSWORD=change-me
DB_NAME=flights
DB_SSLMODE=verify-full
DB_SSL_CERT=/etc/ssl/certs/client.crt
DB_SSL_KEY=/etc/ssl/private/client.key
DB_SSL_ROOT_CERT=/etc/ssl/certs/ca.crt
DB_REQUIRE_SSL=true

# Neo4j Aura / managed graph
NEO4J_URI=neo4j+s://my-neo4j-host:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me

# Redis-compatible queue/cache
REDIS_HOST=my-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=change-me
REDIS_QUEUE_GROUP=flights_workers
REDIS_QUEUE_STREAM_PREFIX=flights
REDIS_QUEUE_BLOCK_TIMEOUT=5s
REDIS_QUEUE_VISIBILITY_TIMEOUT=2m

# Worker configuration
WORKER_ENABLED=true
WORKER_CONCURRENCY=4
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=45s
WORKER_JOB_TIMEOUT=6m
WORKER_SHUTDOWN_TIMEOUT=30s

# Optional: TLS automation
ACME_EMAIL=admin@example.com
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
